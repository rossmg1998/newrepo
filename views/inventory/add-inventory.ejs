<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/inv/add-inventory" method="post">
    <div class="login">
        <label for="classification_id">Choose a classification:</label><br>
        <select name="classification_id" id="classification_id">
            <%- options %>
        </select>
    </div>
    <div class="login">
        <label for="inv_make">Make:</label><br>
        <input type="text" id="inv_make" name="inv_make" required 
        value="<%= locals.inv_make %>" pattern="^[a-zA-Z0-9]+$"><br>
    </div>
    <div class="login">
        <label for="inv_model">Model:</label><br>
        <input type="text" id="inv_model" name="inv_model" required 
        value="<%= locals.inv_model %>" pattern="^[a-zA-Z0-9]+$"><br>
    </div>
    <div class="login">
        <label for="inv_year">Year:</label><br>
        <input type="number" id="inv_year" name="inv_year" required 
        value="<%= locals.inv_year %>" placeholder="Enter a 4-digit year"><br>
    </div>
    <div class="login">
        <label for="inv_description">Description:</label><br>
        <textarea id="inv_description" name="inv_description" required><%= locals.inv_description %></textarea><br>
    </div>
    <div class="login">
        <label for="inv_image">Image Path:</label><br>
        <input type="text" id="inv_image" name="inv_image" required 
        value="<%= locals.inv_image %>"><br>
    </div>
    <div class="login">
        <label for="inv_thumbnail">Thumbnail Path:</label><br>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required 
        value="<%= locals.inv_thumbnail %>"><br>
    </div>
    <div class="login">
        <label for="inv_price">Price:</label><br>
        <input type="number" id="inv_price" name="inv_price" required 
        value="<%= locals.inv_price %>" placeholder="Decimal or number"><br>
    </div>
    <div class="login">
        <label for="inv_miles">Miles:</label><br>
        <input type="number" id="inv_miles" name="inv_miles" required 
        value="<%= locals.inv_miles %>"><br>
    </div>
    <div class="login">
        <label for="inv_color">Color:</label><br>
        <input type="text" id="inv_color" name="inv_color" required 
        value="<%= locals.inv_color %>" pattern="^[a-zA-Z0-9]+$"><br>
    </div>
    <div class="button">
        <button type="submit">Add Inventory</button>
    </div>
</form>

<script>
    const imageInput = document.getElementById("inv_image");
    const thumbnailInput = document.getElementById("inv_thumbnail");

    imageInput.value = "/images/vehicles/no-image.png";
    thumbnailInput.value = "/images/vehicles/no-image.png";
</script>