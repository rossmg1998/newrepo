<h1><%= title %></h1>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="./inventory/add-classification" method="post">
  <div class="login">
    <label for="classification_name">Classification Name:</label><br>
    <span>The new classification name cannot contain a space or special character of any kind</span>
    <input type="text" id="classification_name" name="classification_name" required 
    value="<%= locals.classification_name %>"
    pattern="^[a-zA-Z0-9]+$"><br>
  </div>
  <div class="button">
    <button type="submit">Add Classification</button>
  </div>
</form>